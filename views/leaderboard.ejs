<!DOCTYPE html>
<html>
<head>
  <title>Leaderboard</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/leaderboard.css">
</head>
<body>

  <!-- HEADER (optional) -->
  <div class="nav-wrapper">
    <div class="logo">üîìRoom Treasure Unlock</div>
    <div class="nav-links">
  <% if (currentUser) { %>
    <a href="/submit-score">Submit Score</a>
    <a href="/my-profile">My Profile</a>
    <a href="/logout">Logout</a>
  <% } else { %>
    <a href="/register">Register</a>
    <a href="/login">Login</a>
  <% } %>
</div>

  </div>

  <!-- HERO SECTION (optional) -->
  <div class="hero">
    <div class="hero-container">
      <h1>üèÜ Leaderboard</h1>
      <p>See how top players are performing across all levels</p>
    </div>
  </div>

  <!-- MAIN CONTENT -->
  <div class="container" style="max-width: 100%; padding: 0;">
    <div class="leaderboard-wrapper">

      <!-- EASY -->
      <div class="difficulty-box">
        <h2>üü¢ Easy</h2>
        <table>
          <thead>
            <tr>
              <th>#</th>
              <th>Player</th>
              <th>Score</th>
              <th>Profile</th>
            </tr>
          </thead>
          <tbody>
            <% easyScores.forEach((score, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= score.name %></td>
                <td><%= score.score %></td>
                <td><a href="/user/<%= score.user_id %>">View</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- MEDIUM -->
      <div class="difficulty-box">
        <h2>üü° Medium</h2>
        <table>
          <thead>
            <tr>
              <th>#</th>
              <th>Player</th>
              <th>Score</th>
              <th>Profile</th>
            </tr>
          </thead>
          <tbody>
            <% mediumScores.forEach((score, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= score.name %></td>
                <td><%= score.score %></td>
                <td><a href="/user/<%= score.user_id %>">View</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- HARD -->
      <div class="difficulty-box">
        <h2>üî¥ Hard</h2>
        <table>
          <thead>
            <tr>
              <th>#</th>
              <th>Player</th>
              <th>Score</th>
              <th>Profile</th>
            </tr>
          </thead>
          <tbody>
            <% hardScores.forEach((score, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= score.name %></td>
                <td><%= score.score %></td>
                <td><a href="/user/<%= score.user_id %>">View</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

    </div>

    <div style="text-align: center; margin-top: 20px;">
      <a href="/" class="btn">‚¨Ö Back to Home</a>
    </div>
  </div>

  <!-- FOOTER -->
  <footer>
    &copy; 2025 C Game Score Tracker. All rights reserved.
  </footer>

</body>
</html>
