<!DOCTYPE html>
<html>
<head>
  <title>User Profile</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>User Score History</h1>
  <h3>User: <%= user.name %> (ID: <%= user.id %>)</h3>

  <table border="1" cellpadding="10">
    <tr>
      <th>Score</th>
      <th>Level</th>
      <th>Played At</th>
      <th>Action</th>
    </tr>
    <% sessions.forEach(score => { %>
      <tr>
        <td><%= score.score %></td>
        <td><%= score.level %></td>
        <td><%= new Date(score.played_at).toLocaleString() %></td>
        <td>
          <!-- Make sure this form method is POST -->
          <form method="POST" action="/delete-score/<%= score.id %>" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

  <p><a href="/">â¬… Back to Home</a></p>
</body>
</html>
